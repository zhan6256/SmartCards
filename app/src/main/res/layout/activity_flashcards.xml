<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/flashcardsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flashcards"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/positionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="" />

    <!-- VIEW MODE: show card here -->
    <TextView
        android:id="@+id/cardTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="24dp"
        android:text="(Tap to flip)"
        android:textSize="22sp" />

    <!-- EDIT MODE: show these fields (hidden until Edit is pressed) -->
    <EditText
        android:id="@+id/editQuestionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Question"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editAnswerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Answer"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/addCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Card"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/editCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Card"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/deleteCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Card"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/saveCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Card"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/leftArrowButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="◀" />

        <Button
            android:id="@+id/rightArrowButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="▶" />
    </LinearLayout>

</LinearLayout>
